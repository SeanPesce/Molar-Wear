<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mw.molarwear.gui.activity.ChooseProjectActivity"
    tools:showIn="@layout/app_bar_choose_project">

    <mw.molarwear.gui.list.ProjectListView
        android:id="@+id/listview_projects"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/lbl_listview_projects_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_projects"
        android:textSize="32sp"
        android:textColor="@color/colorPrimaryLight3"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>
