<mw.molarwear.gui.layout.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_listitem_subject"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/transparent"
    android:foreground="?android:attr/selectableItemBackground">
    <TextView
        android:id="@+id/lbl_listitem_checkable_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:layout_weight=".85"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/default_project_title" />
    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/bt_listitem_checkable_1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".15"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:tint="@color/colorPrimaryDark"
        app:backgroundTint="@color/transparent"
        android:text="@string/act_open"
        android:src="@drawable/ic_keyboard_arrow_right"
        android:foreground="?android:attr/selectableItemBackground" />
</mw.molarwear.gui.layout.CheckableLinearLayout>
